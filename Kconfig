config OPPO_AGING_DEBUG_CONFIG
	bool "oppo aging config"
	select DEBUG_SPINLOCK
	select DEBUG_MUTEXES
	select IPC_LOGGING
	select QCOM_RTB
	select QCOM_RTB_SEPARATE_CPUS
	select DEBUG_LIST
	default y if OPPO_AGING_TEST = "true"
	default n

