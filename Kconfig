	string
	default "$(OPPO_SLUB_TEST)"

config OPPO_KASAN_TEST
	string
	default "$(OPPO_KASAN_TEST)"

config OPPO_KMEMLEAK_TEST
	string
	default "$(OPPO_KMEMLEAK_TEST)"

config OPPO_AGING_TEST
	string
	default "$(OPPO_AGING_TEST)"

